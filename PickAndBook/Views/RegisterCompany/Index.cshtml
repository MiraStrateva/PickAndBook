@model PickAndBook.Data.Models.Company
@{
    ViewBag.Title = "Register Company";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Index", "RegisterCompany", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create company assigned to current User.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Company image", new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextBox("upload", "", new { type = "file", id = "CompanyImage" }) <br />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CategoryId, "Category", htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.DropDownList("CategoryId", String.Empty)
            @Html.ValidationMessageFor(model => model.CategoryId)
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Company name", new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.CompanyName)
            @Html.ValidationMessageFor(model => model.CompanyName)
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Company description", new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.CompanyDescription)
            @Html.ValidationMessageFor(model => model.CompanyDescription)
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Email", new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>
    <div class="form-group">
        @Html.Label("City", new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.City)
            @Html.ValidationMessageFor(model => model.City)
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Address", new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.Address)
            @Html.ValidationMessageFor(model => model.Address)
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Contact Name", new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.ContactName)
            @Html.ValidationMessageFor(model => model.ContactName)
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Phone Number", new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.PhoneNumber)
            @Html.ValidationMessageFor(model => model.PhoneNumber)
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Website", new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.CompanyWebsite)
            @Html.ValidationMessageFor(model => model.CompanyWebsite)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" class="btn btn-default" value="Register Company" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}