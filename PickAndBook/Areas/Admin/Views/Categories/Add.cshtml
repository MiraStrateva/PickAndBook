@model PickAndBook.Data.Models.Category
@{
    ViewBag.Title = "Create Category";
}
<h2>Create Category</h2>
<div class="jumbotron admin">
    @using (Html.BeginForm("Add", "Categories", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new category.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Image", new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBox("upload", "", new { type = "file", id = "CategoryImage" }) <br />
                @ViewBag.Message
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Name", new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Description", new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.CategoryDescription, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" class="btn btn-default" value="Create" />

            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@section footer {
    <p>Add new Category</p>
}
